---
import ThemeToggle from './ThemeToggle.astro'
---

<header>
  <div class="content">
    <a href="/">
      <img src="/perdolique.png" alt="Perdolique Logo" width="32" height="32" />
    </a>

    <ThemeToggle />
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    display: flex;
    justify-content: center;
    padding: var(--spacing-8) 0;
    backdrop-filter: blur(4px);
    background-color: light-dark(oklch(100% 0 0 / 0.86), oklch(20.58% 0.02 270.36 / 0.72));
    border-bottom: 1px solid light-dark(oklch(22.61% 0.02 264.02 / 0.08), oklch(95.38% 0.02 274.74 / 0.12));
  }

  .content {
    max-width: var(--max-width);
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  a {
    border-radius: var(--border-radius-8);
    line-height: 0;
  
    &:focus-visible {
      outline: var(--outline);
      outline-offset: var(--outline-offset);
    }
  }

  img {
    @media (prefers-color-scheme: dark) {
      filter: invert(100%);
    }

